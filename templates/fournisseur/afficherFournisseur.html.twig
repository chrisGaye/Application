{% extends 'base.html.twig' %}

{% block title %}Liste fournisseur{% endblock %}

{% block body %}
 <h3>Liste des fournisseurs</h3>
  {% if user %}
    <table id="user" class="table table-striped">
      <thead>
        <tr>
          <th>N°</th>
          <th>Nom</th>
          <th>Numero Tel</th>
          <th>Adresse</th>
          <th>Email</th>
          <th>Boite Postale</th>   
          <th>Fax</th>
        </tr>
      </thead>
      <tbody>
        {% for user in user %}
          <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.NomFournisseur }}</td>
            <td>{{ user.numeroFournisseur }}</td>
            <td>{{ user.AdresseFournisseur }}</td>
            <td>{{ user.MailFournisseur }}</td>
            <td>{{ user.BoitePostale }}</td>
            <td>{{ user.Fax }}</td>
            <td>
              {# <a href="" class="btn btn-dark">Show</a> #}
              <a href="/fournisseur/{{ user.id }}" class="btn btn-primary">Modifier</a>
              <!-- <a href="/bloquerArticle/{{ user.id }}" class="btn btn-warning">Bloquer</a> 
              <a href="/debloquerArticle/{{ user.id }}" class="btn btn-success">Débloquer</a> -->

              <a class="btn btn-danger delete-user" data-toggle="modal" data-target="#exampleModal">Supprimer</a>
              <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h1 class="modal-title" id="exampleModalLabel" style="color: red;font-weight:bold">Suppression</h1>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        <h3 style="font-weight:bold">Voulez-vous effectuer la suppression ?</h3>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" style="font-size:20px">Annuler</button>
                        <a href="/supprimerFournisseur/{{ user.id }}"><button type="button" class="btn btn-primary" style="font-size:20px">Confirmer</button></a>
                      </div>
                    </div>
                  </div>
              </div>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <p style="color: red;font-size:50px">La liste des fournisseurs est vide pour l'instant</p>
  {% endif %}
{% endblock %}

{% block javascripts %}
  <script src="main.js"></script>
{% endblock %}