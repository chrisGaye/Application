{% extends 'base.html.twig' %}

{% block title %}Liste fournisseur{% endblock %}

{% block body %}
 <h3>Liste des fournisseurs</h3>
  {% if user %}
    <table id="user" class="table table-striped">
      <thead>
        <tr>
          <th>N°</th>
          <th>Nom</th>
          <th>Numero Tel</th>
          <th>Adresse</th>
          <th>Email</th>
          <th>Boite Postale</th>   
          <th>Numero Commande</th>
        </tr>
      </thead>
      <tbody>
        {% for user in user %}
          <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.NomFournisseur }}</td>
            <td>{{ user.numeroFournisseur }}</td>
            <td>{{ user.AdresseFournisseur }}</td>
            <td>{{ user.MailFournisseur }}</td>
            <td>{{ user.BoitePostale }}</td>
            <td>{{ user.Fax }}</td>
            <td>
              {# <a href="" class="btn btn-dark">Show</a> #}
              <a href="/fournisseur/{{ user.id }}" class="btn btn-success">Modifier</a>
              <a href="/supprimerFournisseur/{{ user.id }}" class="btn btn-danger delete-article" data-id="{{ user.id }}" onclick="return confirm('Etes-vous sûr de vouloir effectuer la suppession? ')">Supprimer</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <p style="color: red;font-size:50px">La liste des fournisseurs est vide pour l'instant</p>
  {% endif %}
{% endblock %}

{% block javascripts %}
  <script src="main.js"></script>
{% endblock %}