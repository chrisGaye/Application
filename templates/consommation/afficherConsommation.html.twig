{% extends 'base.html.twig' %}

{% block title %}Liste cons{% endblock %}
{% block body %}
 <h1>Liste des Consommations</h1>
  {% if cons %}
    <table id="cons" class="table table-striped">
      <thead>    
        <tr>
            <th>NÂ°</th>
            <th>Date Consommation</th> 
            {# <th>Heure Consommation</th>  #}
            <th>Article</th>
            <th>Quantite Cons</th>
            <th>Service</th>
        </tr>
      </thead>
      <tbody>
        {% for cons in cons %}
          <tr>
                <td>{{ cons.id }}</td>
                <td>{{ cons.DateConsommation |date("d/m/Y") }}</td>
                {# <td>{{ cons.DateConsommation |date("H:i") }}</td>          #}
                <td>{{ cons.articles }}</td>
                <td>{{ cons.QuantiteCons }}</td>
                <td>{{ cons.services }}</td>
                   
            <td>
              
              <a href="/cons/{{ cons.id }}" class="btn btn-success">Modifier</a>
              <a class="btn btn-danger delete-user" data-toggle="modal" data-target="#exampleModal">Supprimer</a>
              
              <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h1 class="modal-title" id="exampleModalLabel" style="color: red;font-weight:bold">Suppression</h1>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        <h3 style="font-weight:bold">Voulez-vous effectuer la suppression ?</h3>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" style="font-size:20px">Annuler</button>
                        <a href="/supprimerCons/{{ cons.id }}"><button type="button" class="btn btn-primary" style="font-size:20px">Confirmer</button></a>
                      </div>
                    </div>
                  </div>
              </div>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <p style="color: red;font-size:50px">La liste des Consommations est vide pour l'instant</p>
  {% endif %}
{% endblock %}

{% block javascripts %}
   <script src="{{ asset('stockCSS/main.js') }}"></script> 
{% endblock %}