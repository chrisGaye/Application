{% block body %}
{{ form_start(form) }}
<div class="container" id="contenu" style="margin-top: -35px;margin-left: 200px">
    <div class="row">
        <div class="col-md-5">
            <div class="panel panel-primary">
                <div class="panel-heading">
                     <h3 class="panel-title" style="padding-left:110px; font-size:25px">Ajouter Type d'article</h3>

                </div>
                
                <div class="panel-body">
                    <form class="form-horizontal" role="form">
                            <div class="form-group">                 
                                           {{ form_row(form.NomType,{ 'attr' : { 'class' : 'form-control', 'label' : 'GAYE'}}) }}
                                
                                          </div>
                                        
                    
                      <div class="input-group ">
       
        <div class="input-group-btn">
         
