{% extends "base.html.twig" %}

{% block css %}
  <link rel="stylesheet" href="{{ asset('stockCSS/form.css') }}">  
{% endblock %}

{% block body %}
{{ form_start(form) }}
<div class="container" id="contenu" style="margin-top: -35px;margin-left: 200px">
    <div class="row">
        <div class="col-md-5">
            <div class="panel panel-primary">
                <div class="panel-heading">
                     <h3 class="panel-title" style="padding-left:110px; font-size:25px">Ajouter Utilisateur</h3>

                </div>
                
                <div class="panel-body">
                    <form class="form-horizontal" role="form">
                            <div class="form-group">
                                                                   

                                           {{ form_row(form.nom,{ 'attr' : { 'class' : 'form-control'}}) }}
                                  
                                
                                          </div>
                                          <div class="form-group">
                                                <!-- <label for="Password" class="col-sm-3 control-label">Pr√©nom</label> -->
                                                         
                                                        {{ form_row(form.prenom,{ 'attr' : { 'class' : 'form-control'}}) }}
                                               
                                                      </div>
                    
                      <div class="input-group ">
          
        
        <div class="input-group-btn">
          <!-- <button ng-click="search()" type="submit" class="btn"> -->
            <!-- <i class="glyphicon glyphicon-search"></i> -->
          </button>
        </div>
      </div>
      <div class="form-group">
            <!-- <label for="inputPassword3" class="col-sm-3 control-label">Matricule</label> -->
            
                    {{ form_row(form.matricule,{ 'attr' : { 'class' : 'form-control'}}) }}
           
        </div>
      <div class="form-group">
            <!-- <label for="inputEmail3" class="col-sm-3 control-label">Email</label> -->
          
                    {{ form_row(form.email,{ 'attr' : { 'class' : 'form-control'}}) }}
        </div>
      <div class="form-group">
                                     
                            {{ form_row(form.username,{ 'attr' : { 'class' : 'form-control'}}) }}
                       
                            </div>
                    
                      
                        
                        <div class="form-group">
                                                   
                                    {{ form_row(form.password,{ 'attr' : { 'class' : 'form-control'}}) }}
                            
                        </div>
                        <div class="form-group">

                                      </div>
                        
                  
                           
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-default" style="background-color: royalblue;color:aliceblue;margin-left:55px;font-size:20px">Valider</button>
                            </div>
                        </div>
                    </form>
                    <div style="padding-top: 40px"> 
                            {% for message in app.flashes('info') %}
                             <div class="alert alert-success" style="font-size: 25px;padding-left:100px" id="alert">
                                   <strong>{{ message }}</strong> 
                                </div>
                            {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }} 

    </div>
</div>
   
{% endblock %}

{% block javascript %}
    <script>
        $('.input-daterange').datepicker();
        $('.multiselect').multiselect({
            includeSelectAllOption: true,
            buttonClass: 'form-control'
        });
    </script>
{% endblock %}